# ============================================
# Production Environment Variables
# Скопируйте этот файл на сервер в /etc/compauto/.env
# ============================================

# NextAuth Configuration
# Сгенерируйте секрет: openssl rand -base64 32
NEXTAUTH_SECRET=your-production-secret-here-generate-with-openssl-rand
NEXTAUTH_URL=https://komp-auto.ru

# Database Configuration (Production)
# Формат: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://compauto_user:YOUR_STRONG_PASSWORD@localhost:5432/compauto_production?schema=public"

# Shadow Database (для безопасных миграций Prisma)
# Prisma использует shadow database для проверки миграций перед применением к основной базе
SHADOW_DATABASE_URL="postgresql://compauto_user:YOUR_STRONG_PASSWORD@localhost:5432/compauto_production_shadow?schema=public"

# Admin User Credentials (для первичного входа)
ADMIN_EMAIL=admin@komp-auto.ru
ADMIN_PASSWORD=YOUR_STRONG_ADMIN_PASSWORD

# Developer Access (опционально, для дополнительного доступа)
DEVELOPER_EMAIL=kirillos382000@mail.ru
DEVELOPER_PASSWORD=YOUR_DEVELOPER_PASSWORD

# Cron Secret (для автоматической очистки tmp файлов)
# Сгенерируйте секрет: openssl rand -base64 32
# Этот же секрет нужно указать в Vercel Cron в заголовке CRON_SECRET
CRON_SECRET=your-cron-secret-key-generate-with-openssl-rand

# Node Environment
NODE_ENV=production
