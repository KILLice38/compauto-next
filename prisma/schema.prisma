generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  schemas  = ["app", "public"]
}

model Product {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  img         String
  gallery     String[] @default([])
  title       String
  description String
  details     String[]
  price       Int
  engineModel String
  autoMark    String
  compressor  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([createdAt])
  @@index([price])
  @@index([autoMark])
  @@index([compressor])
  @@index([engineModel])
  @@schema("app")
}

model User {
  id             String   @id @default(cuid())
  name           String?
  email          String   @unique
  hashedPassword String
  createdAt      DateTime @default(now())

  @@schema("app")
}

model FilterOption {
  id        Int      @id @default(autoincrement())
  type      String // 'autoMark', 'engineModel', 'compressor'
  value     String
  createdAt DateTime @default(now())

  @@unique([type, value])
  @@index([type])
  @@schema("app")
}
